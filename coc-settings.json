{
  "languageserver": {
    // Bash
    "bash": {
      "command": "bash-language-server",
      "args": ["start"],
      "filetypes": ["sh"]
    },

    // General purpose language server for linting and formatting
    "efm": {
      "command": "efm-langserver",
      "args": [],
      "filetypes": ["vim", "sh"]
    },

    // Vim Language Server
    "vimls": {
      "command": "vim-language-server",
      "args": ["--stdio"],
      "initializationOptions": {
        "iskeyword": "@,48-57,_,192-255,-#",
        "vimruntime": "",
        "runtimepath": "",
        "diagnostic": {
          "enable": true
        },
        "indexes": {
          "runtimepath": true,
          "gap": 100,
          "count": 3,
          "projectRootPatterns": [".git", "autoload", "plugin"]
        },
        "suggest": {
          "fromVimruntime": true,
          "fromRuntimepath": true
        }
      },
      "filetypes": ["vim"]
    }
  }
}
